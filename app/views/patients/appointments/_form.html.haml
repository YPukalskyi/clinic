= render 'components/errors', record: @appointment

.row
  .col-4.offset-4
    .card
      .card-body
        = form_for [:patients, @appointment] do |f|
          = f.hidden_field(:doctor_id)

          .row.g-3
            .col-12
              = f.label :started_at, class: 'form-label'
              = f.datetime_local_field :started_at, min: Date.today, class: 'form-control'
            .col-12
              = f.label :ended_at, class: 'form-label'
              = f.datetime_local_field :ended_at, min: Date.today, class: 'form-control'
            .col-12
              = f.submit 'Save', class: 'btn btn-primary'
